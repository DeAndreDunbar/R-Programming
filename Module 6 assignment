A <- matrix(c(2,0,1,3), ncol=2)
B <- matrix(c(5,2,4,-1), ncol=2)


PAB <- A + B
PAB
     [,1] [,2]
[1,]    7    5
[2,]    2    2

SAB <- A - B 
SAB
[,1] [,2]
[1,]   -3   -3
[2,]   -2    4

Mymatrix <- diag(c(4,1,2,3))

Mymatrix

       [,1] [,2] [,3] [,4]
[1,]    4    0    0    0
[2,]    0    1    0    0
[3,]    0    0    2    0
[4,]    0    0    0    3

Diagonal <- c(3,3,3,3,3)
firRow <- c(3,1,1,1,1)
firCol <- c(3,2,2,2,2)

Mymatrix2 <- matrix(0, nrow = 5, ncol = 5)

diag(Mymatrix2) <- Diagonal
Mymatrix2[,1] <- firCol
Mymatrix2[1,] <- firRow
Mymatrix2
     [,1] [,2] [,3] [,4] [,5]
[1,]    3    1    1    1    1
[2,]    2    3    0    0    0
[3,]    2    0    3    0    0
[4,]    2    0    0    3    0
[5,]    2    0    0    0    3
